<div class="main_cont container">
    <span class="dark" style="font-size: 40px; font-weight: bold">Forecast for 5 days - <%= @today_apix.location %></span>
    <span class="dropdown">
        <button type="button" class="btn btn-secondary dropdown-toggle float-right" data-toggle="dropdown">
            <%= @today_apix.location %>
        </button>
        <div class="dropdown-menu">
          <%= link_to "Bishkek", five_day_path, class: "dropdown-item" %>
          <%= link_to "Batken", fiveday_batken_weather_path, class: "dropdown-item" %>
          <%= link_to "Talas", fiveday_talas_weather_path, class: "dropdown-item" %>
        </div>
    </span>
    <h4>ApiXu</h4>
    <div class="row dark_data">
      <% @five_today_apix.each do |day| %>
        <div class="col-md-2">
          <b><%= day[0] %></b></br>
          <span style="font-size: 20px"><b>Day</b></span>
          <% if @today_apix.temperature > 0 %> 
            +
          <% else%>
            -
          <% end %>
          <b style="font-size: 18px"><%= day[1] %></b></br>
          <span style="font-size: 14px"><b>Night</b></span>
          <% if @today_apix.temperature > 0 %> 
            +
          <% else%>
            -
          <% end %>
          <b style="font-size: 14px"><%= day[2] %></b></br>
          <b style="font-size: 13px"><%= day[3] %></b>
        </div>
      <% end %>
    </div>
  
    <div style="margin: 50px"></div>
    
    <h4>Dark Sky</h4>
    <div class="row dark_data">
        <% @five_today_dark.each do |day| %>
          <div class="col-md-2">
            <b><%= day[0] %></b></br>
            <span style="font-size: 20px"><b>Day</b></span>
            <% if @today_dark.temperature > 0 %> 
              +
            <% else%>
              -
            <% end %>
            <b style="font-size: 18px"><%= day[1] %></b></br>
            <span style="font-size: 14px"><b>Night</b></span>
            <% if @today_dark.temperature > 0 %> 
              +
            <% else%>
              -
            <% end %>
            <b style="font-size: 14px"><%= day[2] %></b></br>
            <b style="font-size: 13px"><%= day[3] %></b>
          </div>
        <% end %>
      </div>
  </div>